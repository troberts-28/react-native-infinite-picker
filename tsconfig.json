{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["esnext"],
        "allowJs": true,
        "jsx": "react-native",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "declaration": true,
        "paths": {
            "react": ["./node_modules/@types/react"]
        }
    },
    "exclude": [
        "examples/*",
        "dist/*",
        "src/tests",
        "babel.config.js",
        "README.md"
    ]
}
